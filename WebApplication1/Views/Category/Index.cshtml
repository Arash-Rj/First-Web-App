@{
}
@model List<Category>
<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered table-sm ">
        <caption>Shop Categories</caption>
        <thead>
            <tr class="bg-success">
                <th scope="col">Id</th>
                <th scope="col">Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in @Model)
            {
                <tr>
                    <th scope="row">@category.Id</th>
                    <td>@category.Name</td>
                </tr>
            }
        </tbody>
    </table>

        <a class="btn btn-success" type="button" asp-action="Create">Create New Category</a>


</div>